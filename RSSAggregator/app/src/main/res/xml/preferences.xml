        android:key="@string/key_profile_category"
        android:title="@string/title_profile_category">

        <Preference
            android:key="@string/key_name_profile">
        </Preference>

        <SwitchPreference
            android:key="@string/key_show_all"
            android:summary="@string/show_all_summary"
            android:title="@string/show_all_title" />

        <Preference
            android:key="@string/key_logout"
            android:title="@string/title_logout">
        </Preference>
